@namespace Pamaxie.Website.Pages
@page "/Account"

<body id="page-top">
<AuthorizeView>
    <NotAuthorized>
        <Pamaxie.Website.Shared.RedirectToLogin/>
    </NotAuthorized>
    <Authorized>
        <MudText Class="dynamicPadding mg-10" Typo="Typo.h4">This is your account, @User?.UserName</MudText>
        <MudForm Class="dynamicPadding dash-spacing">
            <MudAvatar Image="@User?.ProfilePictureAddress"/>
            <MudField Label="User Name" Variant="Variant.Text" Disabled="true">@User?.UserName</MudField>
            <MudField Label="Email Address" Variant="Variant.Text" Disabled="true">@User?.EmailAddress</MudField>
            <MudField Label="User Id" Variant="Variant.Text" Disabled="true">@User?.UniqueKey</MudField>
            <MudButton Class="mg-20" Color="Color.Error" OnClick="OnDeleteButtonClicked" Disabled="@DisableDeleteData">Delete Account</MudButton>
        </MudForm>

        <!-- Fancy smancy styling path -->
        <svg style="max-height: 140px; width: 100%; height: 20%" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" preserveAspectRatio="none">
